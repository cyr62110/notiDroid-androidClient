    <!-- Margin applied on various styled UI component -->
    <dimen name="notidroid_subTitleMargin">@dimen/notidroid_largeSpacing</dimen>

    <dimen name="notidroid_textMicro">12sp</dimen>
    <dimen name="notidroid_textSmall">14sp</dimen>
    <dimen name="notidroid_textMedium">18sp</dimen>
    <dimen name="notidroid_textLarge">22sp</dimen>
    <dimen name="notidroid_textXLarge">32sp</dimen>
