<?xml version="1.0" encoding="utf-8"?>
<!--
    This file contains all standard text styles that are used across all notidroid android
    applications.
-->
<resources>

    <!-- Style of a title when inserted in the core of the page -->
    <style name="Notidroid.Text.Title" parent="Notidroid.Text">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/notidroid_textXLarge</item>
        <item name="android:textColor">@color/notidroid_primaryText</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- Style of a text giving explanation on the page. It often comes right under
        a title. -->
    <style name="Notidroid.Text.SubTitle" parent="Notidroid.Text">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/notidroid_textMedium</item>
        <item name="android:textColor">@color/notidroid_primaryText</item>
        <item name="android:layout_margin">@dimen/notidroid_subTitleMargin</item>
    </style>

    <!-- Style of an error message -->
    <style name="Notidroid.Text.Error" parent="Notidroid.Text">
        <item name="android:textSize">@dimen/notidroid_textMedium</item>
        <item name="android:textColor">@color/notidroid_errorText</item>
        <item name="android:drawableLeft">@drawable/ic_error_errorcolor</item>
    </style>

    <!-- Style of a standard text in a page -->
    <style name="Notidroid.Text" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textSize">@dimen/notidroid_textMedium</item>
        <item name="android:textColor">@color/notidroid_primaryText</item>
    </style>

</resources>